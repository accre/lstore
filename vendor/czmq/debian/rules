#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

# skip tests within Jenkins because port limit issues cause occasional spurious test failures
ifdef JENKINS_URL
DEB_BUILD_OPTIONS:=nocheck $(DEB_BUILD_OPTIONS)
export DEB_BUILD_OPTIONS
$(info Tests disabled)
else
$(info Tests enabled)
endif

%:
	dh $@ 
