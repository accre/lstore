<project
    name = "CZMQ"
    description = "The high-level C binding for 0MQ"
    script = "zproject.gsl"
    email = "zeromq-dev@lists.zeromq.org"
    >
    <include filename = "license.xml" />
    <version major = "3" minor = "0" patch = "3" />
    <use project = "libzmq" />
    <use project = "uuid" optional = "1" implied = "1" />

    <class name = "zactor" />
    <class name = "zauth" />
    <class name = "zarmour" />
    <class name = "zbeacon" />
    <class name = "zcert" />
    <class name = "zcertstore" />
    <class name = "zchunk" />
    <class name = "zclock" />
    <class name = "zconfig" />
    <class name = "zdigest" />
    <class name = "zdir" />
    <class name = "zdir_patch" />
    <class name = "zfile" />
    <class name = "zframe" />
    <class name = "zgossip" />
    <class name = "zhashx" />
    <class name = "ziflist" />
    <class name = "zlistx" />
    <class name = "zloop" />
    <class name = "zmonitor" />
    <class name = "zmsg" />
    <class name = "zpoller" />
    <class name = "zproxy" />
    <class name = "zrex" />
    <class name = "zsock" />
    <class name = "zsock_option" />
    <class name = "zstr" />
    <class name = "zsys" />
    <class name = "ztrie" />
    <class name = "zuuid" />

    <!-- Models that we build using GSL -->
    <model name = "sockopts" />
    <model name = "zgossip" />
    <model name = "zgossip_msg" />
    <class name = "zgossip_msg" private = "1" />

    <!-- Other source files in src that we need to package -->
    <extra name = "zgossip_engine.inc" />
    <extra name = "zhash_primes.inc" />
    <extra name = "zclass_example.xml" />
    <extra name = "foreign/sha1/sha1.inc_c" />
    <extra name = "foreign/sha1/sha1.h" />
    <extra name = "foreign/slre/slre.inc_c" />
    <extra name = "foreign/slre/slre.h" />
    <extra name = "foreign/slre/readme.txt" />

    <!-- Deprecated V2 API, remove some time after 3.0 stability -->
    <class name = "zauth_v2" />
    <class name = "zbeacon_v2" />
    <class name = "zctx" />
    <class name = "zhash" />
    <class name = "zlist" />
    <class name = "zmonitor_v2" />
    <class name = "zmutex" />
    <class name = "zproxy_v2" />
    <class name = "zsocket" />
    <class name = "zsockopt" />
    <class name = "zthread" />

    <!-- Command-line utilities -->
    <main name = "zmakecert" />
    <main name = "test_zgossip" private = "1" />
</project>
