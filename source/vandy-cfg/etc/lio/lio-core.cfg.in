[user]
user=dummy

[rs_simple]
type=simple
fname=/etc/lio/rid.cfg
dynamic_mapping=1
check_interval=60

[rs_simple_client]
type=simple
fname=/lio/cfg/rid-client.cfg
dynamic_mapping=1
check_interval=60
check_timeout=0  #Disable probing the depots.  Getting info from remote client/server

[rs_remote_client]
type=remote_client
rs_local = rs_simple_client
child_fname = /lio/cfg/rid-client.cfg
remote_address = tcp://@LSERVER_IP@:6713
dynamic_mapping = 1
check_interval = 3600
check_timeout = 70

[rs_remote_client_daisy_server]
type=remote_client
rs_local = rs_simple_client
child_fname = /etc/lio/rid-client.cfg
remote_address = tcp://@LSERVER_IP@:6713
dynamic_mapping = 1
check_interval = 3600
check_timeout = 60
rrs_test = rs_remote_server

[rs_remote_server]
type = remote_server
rs_local = rs_simple
address = tcp://@LSERVER_IP@:6713


[cache-amp]
type=amp
max_bytes = 256mi
#max_bytes = 1024mi
#max_bytes = 2048mi
dirty_max_wait = 300
dirty_fraction = 0.1
default_page_size = 4ki
max_fetch_fraction = 0.5
async_prefetch_threshold = 256ki
min_prefetch_bytes = 1024ki
#min_prefetch_bytes = 256ki
#write_temp_overflow_fraction = 0.1
write_temp_overflow_fraction = 0
max_streams = 1000
ppages = 64

[cache-lru]
type=lru
max_bytes = 1024mi
#max_bytes = 1gi
dirty_max_wait = 30
dirty_fraction = 0.01
default_page_size = 64ki
max_fetch_fraction = 0.5
write_temp_overflow_fraction = 0.1
ppages = 64

[cache-round-robin]
type=round_robin
n_cache = 10
child = cache-amp

[ibp]
type=ibp
coalesce_enable = 1
rw_command_weight = 10240
other_command_weight = 102400
max_thread_workload = 1mi
connection_mode = 0
rr_size = 16
min_depot_threads = 1
max_depot_threads = 24
max_connections = 4096
#duration = 86400
duration = 172800

[osfile]
type = file
base_path = /lio/osfile
authn = fake
authz = fake
lock_table_size = 1000
max_copy = 1000


[os_remote_client_daisy_server]
type=os_remote_client
os_temp=os_remote_server
remote_address = tcp://@LSERVER_IP@:6712
max_stream = 1024000

[os_remote_client_only]
type=os_remote_client
#os_temp=os_remote_server
remote_address = tcp://@LSERVER_IP@:6712
max_stream = 1024000
heartbeat = 60
stream_timeout = 60

[os_remote_server]
type=os_remote_server
os_local=osfile
address = tcp://@LSERVER_IP@:6712
max_stream = 1024000
log_activity=/lio/log/os.log

[mq_context]
min_conn=1
max_conn=4
min_threads=2
max_threads=10000
backlog_trigger=1000
heartbeat_dt=5
heartbeat_failure=30
min_ops_per_sec=100

# The stuff below is just used for the ex_rw_test program

[rw_params]
parallel=5
update_interval=10
buffer_size= 50Mi
file_size = 1000Mi
#file_size = 60Mi

#file=file.ex3
#file=cfile.ex3

#file=ifile.ex3
#file=cifile.ex3

#file=lfile.ex3
#file=clfile.ex3

file=cjerase_16k.ex3

#file=log_file.ex3
#file=log_jerase.ex3

do_final_check=1
do_flush_check=1
#mode=random
mode=linear
min_size=10240
max_size=10240
write_sigma=1
read_sigma=1
read_lag=-1
#read_fraction=0
read_fraction=0.5
seed=6


